@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
	<script src="~/lib/moment/moment.js"></script>
	<script>
		$(function () {

			// Initialize date-picker for the applicant's date of birth
			$("#ApplicantDateOfBirth").datepicker({
				dateFormat: "dd.mm.yy",
				changeMonth: true,
				changeYear: true,
				showButtonPanel: true,
				yearRange: "-100:+0"
			});


			// Make residence-permit visible if nationality is not CH
			$("#Applicant_NationalityId").on("change", function () {
				var nativeNationalityId = parseInt($(this).data("native-nationality-id"));
				var nationalityId = parseInt($(this).val());
				var residencePermit = $("#Applicant_ResidencePermit").parent("div");
				if (nativeNationalityId === nationalityId) residencePermit.show();
				else residencePermit.hide();
			});


			// Handle occupation selection change
			$("#Applicant_Occupation").on("change", function () {

				//var occupationSelected = $(this).children(":selected").text();
				var selectedOccupation = parseInt($(this).val());

				// Make employer visible and required, if the
				// occupation is either part or full time.
				var occupationEmployerValues = [2, 3];
				var employer = $("#Applicant_Employer"),
					employerContainer = employer.parent("div");
				if (occupationEmployerValues.includes(selectedOccupation)) {
					employer.attr("required", true);
					employerContainer.show();
				} else {
					employer.removeAttr("required");
					employerContainer.hide();
				}

				// Make company-name and company-website visible
				// and also make, company-name required, only
				// if occupation, is of type: self-emplyed.
				// Make official-freelance-statement visible only
				// if the occupation, is of type self-employed.
				var occupationSelfEmployedValue = 5;
				var companyName = $("#Applicant_CompanyName"),
					companyNameContainer = companyName.parent("div");
				var companyWebsite = $("#Applicant_CompanyWebsite"),
					companyWebsiteContainer = companyWebsite.parent("div");
				var ofsContainer = $("#OfficialFreelanceStatement").parent("div");
				if (occupationSelfEmployedValue === selectedOccupation) {
					companyName.attr("required", true);
					companyNameContainer.show();
					companyWebsiteContainer.show();
					ofsContainer.show();
				} else {
					companyName.removeAttr("required");
					companyNameContainer.hide();
					companyWebsiteContainer.hide();
					ofsContainer.hide();
				}
			});


			// Handle input file uploads
			$(".btn-upload").on("click", function () {
				var inputFileId = "#" + $(this).data("input-file-id");
				$(inputFileId).click();
			});
			$("#OfficialFreelanceStatement").on("change", function () {

				var filePath = $(this).val();
				var fileInfoId = "#" + $(this).attr("id") + "_Info";
				var fileInfoText = "Accepted formats: PDF, JPG, JPEG, TIFF, PNG, GIF";

				if (filePath === "") {
					$(fileInfoId).text(fileInfoText);
					return;
				}

				var validExtensions = [".pdf", ".jpg", ".jpeg", ".tiff", ".png", ".gif"];
				var fileName = getChosenFileName(filePath);
				var isFileValid = isFileExtensionValid(filePath, validExtensions);

				if (isFileValid) {
					fileInfoText = "You've choosen file: " + fileName;
				} else {

					alert("Sorry, " + fileName + " is invalid, allowed extensions are: " +
						validExtensions.join(", "));

					// Reset file's value because no valid file format was provided.
					$(this).val("");
				}

				$(fileInfoId).text(fileInfoText);
			});
			$("#ProfilePicture").on("change", function () {

				var filePath = $(this).val();
				var fileInfoId = "#" + $(this).attr("id") + "_Info";
				var fileInfoText = "Accepted formats: JPG and JPEG";

				if (filePath === "") {
					$(fileInfoId).text(fileInfoText);
					return;
				}

				var validExtensions = [".jpg", ".jpeg"];
				var fileName = getChosenFileName(filePath);
				var isFileValid = isFileExtensionValid(filePath, validExtensions);

				if (isFileValid) {
					fileInfoText = "You've choosen file: " + fileName;
				} else {

					alert("Sorry, " + fileName + " is invalid, allowed extensions are: " +
						validExtensions.join(", "));

					// Reset file's value because no valid file format was provided.
					$(this).val("");
				}

				$(fileInfoId).text(fileInfoText);
			});

			// Handle displaying and hiding of additional js-certificates
			function handleShowingNextJsCertification(certificationIndex) {

				var index = certificationIndex;
				var currentCertName = "#JsTrainingCertificate_" + index + "_Name";
				var currentCertType = "#JsTrainingCertificate_" + index + "_Type";
				var nextCertContainer = "#additional-js-certificate-" + (index + 1);

				$(currentCertName).on("change", function () {
					var isNameValid = $(this).val().trim() !== "";
					var isTypeValid = $(currentCertType).val() !== "";
					if (isNameValid && isTypeValid) $(nextCertContainer).show();
				});

				$(currentCertType).on("change", function () {
					var isNameValid = $(currentCertName).val().trim() !== "";
					var isTypeValid = $(this).val() !== "";
					if (isNameValid && isTypeValid) {
						$(nextCertContainer).show();
					}
				});
			}
			handleShowingNextJsCertification(1);
			handleShowingNextJsCertification(2);
			handleShowingNextJsCertification(3);
			handleShowingNextJsCertification(4);

			// Check terms of agreement
			$("form").on("submit", function (event) {
				event.preventDefault();
				var areTermsChecked = $("#terms").prop("checked");

				$("#terms-error").text(!areTermsChecked ?
					"Please accept the contractual terms!" : "");

				// Finally submit the form if terms are checked
				if (areTermsChecked) $("form").off("submit").submit();
			});
		});
	</script>
