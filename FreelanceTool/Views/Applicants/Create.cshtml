            </div>
            <div class="form-group">
                <label asp-for="TrainingNumber" class="control-label"></label>
                <input asp-for="TrainingNumber" class="form-control" />
                <span asp-validation-for="TrainingNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IbanNumber" class="control-label"></label>
                <input asp-for="IbanNumber" class="form-control" />
                <span asp-validation-for="IbanNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MainLanguage" class="control-label"></label>
	            <select asp-for="LanguageId" class="form-control" 
	                    asp-items="ViewBag.LanguageId">
		            <option value="">-- Select Language --</option>
	            </select>
	            <span asp-validation-for="MainLanguage" class="text-danger"></span>
