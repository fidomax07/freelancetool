		            <option value="">(none)</option>
	            </select>
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SwissSocialSecurityNumber" class="control-label"></label>
                <input asp-for="SwissSocialSecurityNumber" class="form-control" />
                <span asp-validation-for="SwissSocialSecurityNumber" class="text-danger"></span>
