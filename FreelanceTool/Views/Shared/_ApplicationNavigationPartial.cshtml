@using FreelanceTool.Models.Enums
@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Options

@inject IViewLocalizer Localizer
@inject IOptions<RequestLocalizationOptions> LocOptions

<div class="header z-depth-1">
    <div class="toprow">
        <div class="inner row no-gutters">
            <div class="col">
                <a href="http://www.cleven-stiftung.com"><img src="~/images/home.png" alt="" /></a>
            </div>
            <div class="col no-gutters align-self-center">
                @await Html.PartialAsync("_SelectLanguagePartial")
            </div>
        </div>
    </div>
    <div class="main row">
        <div class="inner row no-gutters">
            <div class="col">
                <a href="/"><img src="~/images/@Localizer["Logo Name"]" alt="" /></a>
            </div>
        </div>
    </div>
</div>
